<Container>
    <!-- Stack the columns on mobile by making one 
         full-width and the other half-width -->
    <Row>
        <Column Span="12 | md-8">
            Span="12 | md-8"
        </Column>
        <Column Span="6 | md-4">
            Span="6 | md-4"
        </Column>
    </Row>

    <!-- Columns start at 50% wide on mobile and bump 
         up to 33.3% wide on desktop -->
    <Row>
        <Column Span="6 | md-4">
            Span="6 | md-4"
        </Column>
        <Column Span="6 | md-4">
            Span="6 | md-4"
        </Column>
        <Column Span="6 | md-4">
            Span="6 | md-4"
        </Column>
    </Row>

    <!-- Columns are always 50% wide, on mobile and desktop -->
    <Row>
        <Column Span="6">
            Span="6"
        </Column>
        <Column Span="6">
            Span="6"
        </Column>
    </Row>
</Container>